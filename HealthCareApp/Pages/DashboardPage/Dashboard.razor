@page "/dashboard";
@using MyApp.Components.Message;
@using MyApp.Components.CardV3;
@using MyApp.Components.PageV3;
@using MyApp.Components.Breadcrumb;
@using MyApp.Components.Chart.MopUsage;
@using MyApp.Components.Chart.User;

<div class="container-lg">
    <AuthorizeView>
        <Authorized>
            <PageWrapper>

                <PageTopView>
                    <PageTopWrapper>
                        <PageTopTitle Title="Dashboard" />
                        <Breadcrumb AppPageLink="@_appURL.Dashboard" />
                    </PageTopWrapper>
                </PageTopView>

                <PageMiddleView>
                    <PageMiddleWrapper>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <ChartUsers />
                            </div>
                            <div class="col-md-6">
                                <ChartMopUsage DateTimeRange="@_dateTimeRange" />
                            </div>
                        </div>
                    </PageMiddleWrapper>
                </PageMiddleView>

                <PageBottomView />

            </PageWrapper>
        </Authorized>
        <NotAuthorized>
            <NotAuthorizedMessage />
        </NotAuthorized>
    </AuthorizeView>
</div>
